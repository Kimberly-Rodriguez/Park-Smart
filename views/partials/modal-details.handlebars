{{#if spots.spot_taken}}
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">This Spot is Taken!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">It will be available at : {{time_available}}</div>
            {{#if logged_in}}
            <div class="modal-footer">
                <label for="customRange3" class="form-label">I will be leaving in &nbsp;</label><input type="text"
                    id="textInput" value=""><label>&nbsp; minutes</label>
                <input type="range" name="rangeInput" class="form-range" min="0" max="300" id="customRange3"
                    onchange="updateTextInput(this.value);">
                {{!-- this will be a put route that updates the parkingspot.time_available where user_id matches the
                user(id) in session --}}
                <button class="btn btn-danger" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal"
                    data-bs-dismiss="modal">Edit My Time</button>
                <span>OR</span>
                {{!-- this will be a put route that updates the parkingspot.spot_taken value to false --}}
                <button class="btn btn-danger" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal"
                    data-bs-dismiss="modal">I'm Leaving</button>
            </div>
            {{/if}}
        </div>
    </div>
</div>
{{else}}
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">This Spot is Available!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        I am parking here
                    </label>
                </div>
                <br>
                <label for="customRange3" class="form-label">I will be leaving in &nbsp;</label><input
                    name="time_available" type="text" id="textInput" value=""><label>&nbsp; minutes</label>
                <input type="range" name="rangeInput" class="form-range" min="0" max="300" id="customRange3"
                    onchange="updateTextInput(this.value);">
            </div>
            <div class="modal-footer">
                {{!-- this will be a put route that updates the parkingspot.spot_taken to true & the
                parkingspot.time_available to req.body.time_available where user_id matches user(id) in session --}}
                <button class="btn btn-success" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">Park
                    Here!</button>
            </div>
        </div>
    </div>
</div>
{{/if}}